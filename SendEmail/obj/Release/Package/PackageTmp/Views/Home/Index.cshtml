            var v_msg = $('textarea[name=mensagem]').val();

            $.ajax({
                type: "POST",
                url: "@Url.Content("~/Email/SendMail")",
                dataType: "html",
                data: { name: v_name, tel: v_tel, email: v_mail, agencia: v_agencia, msg: v_msg },
                success: function (retorno) {
                    alert('Mensagem encaminhada com sucesso!');
                    $('input[name=nome]').val('')
                    $('input[name=telefone]').val('')
                    $('input[name=email]').val('')
                    $('input[name=agencia]').val('')
                    $('textarea[name=mensagem]').val('')
                },
                error: function (e) {
                    alert('Ops! Ocorreu um erro ao enviar mensagem. Por Favor tente novamente!');
                }
            });
        });
    })
</script>
